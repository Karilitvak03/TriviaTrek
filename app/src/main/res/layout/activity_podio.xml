<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_oscuro"
    tools:context=".PodioActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo2" />

    <ImageView
        android:id="@+id/iconoVolver6"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="@string/desc_atras"
        android:onClick="volverAtras"
        android:src="@drawable/atras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imgPodio"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/style_borde"
        android:backgroundTint="@color/fondo_radiobutton"
        android:contentDescription="@string/podio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:srcCompat="@drawable/podio" />

    <TextView
        android:id="@+id/txtOro1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="@color/amarillo_logo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtPrimerPuesto"
        app:layout_constraintStart_toStartOf="@+id/txtPrimerPuesto"
        app:layout_constraintTop_toBottomOf="@+id/txtPrimerPuesto" />

    <TextView
        android:id="@+id/txtOro2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="@color/amarillo_logo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtSegundoPuesto"
        app:layout_constraintStart_toStartOf="@+id/txtSegundoPuesto"
        app:layout_constraintTop_toBottomOf="@+id/txtSegundoPuesto" />

    <TextView
        android:id="@+id/txtOro3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="@color/amarillo_logo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtTercerPuesto"
        app:layout_constraintStart_toStartOf="@+id/txtTercerPuesto"
        app:layout_constraintTop_toBottomOf="@+id/txtTercerPuesto" />

    <TextView
        android:id="@+id/txtPrimerPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="@color/amarillo_logo"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgPodio" />

    <TextView
        android:id="@+id/txtSegundoPuesto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="#C3C5C7"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPodio"
        app:layout_constraintStart_toStartOf="@+id/imgPodio" />

    <TextView
        android:id="@+id/txtTercerPuesto"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="#CCA24A"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgPodio"
        app:layout_constraintEnd_toEndOf="@+id/imgPodio" />

    <TextView
        android:id="@+id/txtPuesto"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/sprite_graffiti"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPodio" />

    <Button
        android:id="@+id/btnJugar2"
        android:layout_width="276dp"
        android:layout_height="59dp"
        android:layout_marginStart="108dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/amarillo_logo"
        android:fontFamily="@font/sprite_graffiti"
        android:text="@string/jugar"
        android:textColor="@color/rosado_logo"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>