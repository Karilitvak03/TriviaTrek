<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PodioActivity"
    android:background="@drawable/fondo_oscuro">


    <ImageView
            android:id="@+id/imgPodio"
            android:layout_width="403dp"
            android:layout_height="438dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="136dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/podio"/>
    <TextView
        android:id="@+id/txtTercerPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="200dp"
        android:text="Nombre 3er Puesto"
        android:textAlignment="textEnd"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/rosado_logo"/>

    <TextView
        android:id="@+id/txtSegundoPuesto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="200dp"
        android:text="Nombre 2do Puesto"
        android:textAlignment="textStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/rosado_logo"/>

    <Button
            android:id="@+id/btnJugar2"
            android:layout_width="382dp"
            android:layout_height="63dp"
            android:layout_marginStart="108dp"
            android:layout_marginTop="439dp"
            android:layout_marginEnd="109dp"
            android:backgroundTint="@color/azuloscuro_logo"
            android:text="JUGAR"
            android:textColor="@color/celeste_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgPodio" android:textSize="34sp"/>

    <TextView
            android:id="@+id/txtPrimerPuesto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:text="Nombre 1er Puesto"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/rosado_logo"/>
    <Button
            android:id="@+id/btnVolver2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VOLVER"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="664dp"
            app:layout_constraintHorizontal_bias="0.049"
            android:backgroundTint="@color/azuloscuro_logo"
            android:textColor="@color/celeste_logo"/>
    <ImageView
            android:layout_width="188dp"
            android:layout_height="167dp" app:srcCompat="@drawable/logo2" android:id="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.001"/>

</androidx.constraintlayout.widget.ConstraintLayout>