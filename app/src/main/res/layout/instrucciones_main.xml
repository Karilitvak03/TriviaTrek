<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_oscuro"
    tools:context=".PreguntaActivity">

    <ImageView
        android:id="@+id/imgLogo4"
        android:layout_width="120dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001"
        app:srcCompat="@drawable/logo2" />

    <ImageView
            android:id="@+id/iconoVolver3"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:contentDescription="Volver atrás"
            android:onClick="volverAtras"
            android:src="@drawable/atras"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.046"/>

    <TextView
            android:id="@+id/textInstrucciones"
            android:layout_width="351dp"
            android:layout_height="531dp"
            android:text="Bienvenido a TriviaTrek, el emocionante juego de preguntas y respuestas donde tu conocimiento puede llevarte a la gloria o dejarte en la bancarrota.
            \n1-Inicio:
            \n→Comienzas con 100 unidades de oro.
            \n2-Categorías Específicas:
            \n→Elige entre 4 categorías.
            \n→Respuesta correcta: +10 oro.
            \n→Respuesta incorrecta: -10 oro.
            \n3-Categoría Random:
            \n→Preguntas de todas las categorías.
            \n→Respuesta correcta: +25 oro.
            \n→Respuesta incorrecta: -25 oro.
            \n4-Tener 0 monedas:
            \n→No pierdes más oro al responder incorrectamente.
            \n→Vuelve a sumar oro al responder correctamente.
            \n5-Fin del juego:
            \n→Juega hasta que decidas terminar el juego.
            \n→Acumula oro para una puntuación alta.
            \n¡Disfruta de TriviaTrek y demuestra tu conocimiento!"
            android:textColor="@color/rosado_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.634"
            android:fontFamily="@font/sprite_graffiti"
            android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>