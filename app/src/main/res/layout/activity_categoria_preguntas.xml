<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_amarillo"
    android:contentDescription="DEPORTE"
    tools:context=".CategoriaPreguntasActivity">

    <ImageButton
        android:id="@+id/btnArte"
        android:layout_width="185dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:contentDescription="ARTE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_arte" />

    <ImageButton
        android:id="@+id/btnEntretenimiento"
        android:layout_width="185dp"
        android:layout_height="250dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:contentDescription="ENTRETENIMIENTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/icono_entretenimiento" />

    <Button
        android:id="@+id/btnRandom"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:background="#C7C4C6"
        android:text="TODAS LAS CATEGORIAS, ME LA RE BANCO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtCategoria"
        android:layout_width="236dp"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:text="Selecciona una categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.771"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="20sp" />

    <Button
        android:id="@+id/btnVovler2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnGeografia"
        android:layout_width="185dp"
        android:layout_height="250dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:contentDescription="GEOGRAFIA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_geografia" />

    <ImageButton
        android:id="@+id/btnDeporte"
        android:layout_width="185dp"
        android:layout_height="250dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="128dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:contentDescription="DEPORTE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/icono_deporte" />

</androidx.constraintlayout.widget.ConstraintLayout>