<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/fondo_oscuro"
                                                   android:contentDescription="DEPORTE"
                                                   tools:context=".CategoriaPreguntasActivity">

    <ImageView
            android:id="@+id/iconoVolver4"
            android:layout_width="64dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:contentDescription="Volver atrÃ¡s"
            android:onClick="volverAtras"
            android:src="@drawable/atras"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.023"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.046"/>
    <ImageButton
            android:id="@+id/btnGeografia"
            android:layout_width="185dp"
            android:layout_height="250dp"
            android:layout_marginTop="124dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:contentDescription="GEOGRAFIA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icono_geografia"/>
    <Button
            android:id="@+id/btnRandom"
            android:layout_width="372dp"
            android:layout_height="50dp"
            android:layout_marginBottom="32dp"
            android:text="TODAS LAS CATEGORIAS, ME LA RE BANCO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="TextContrastCheck"
            android:backgroundTint="@color/azuloscuro_logo"
            android:textColor="@color/celeste_logo"
            android:fontFamily="@font/sprite_graffiti"
            android:textSize="18sp"/>
    <ImageButton
            android:id="@+id/btnEntretenimiento"
            android:layout_width="185dp"
            android:layout_height="250dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="92dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:contentDescription="ENTRETENIMIENTO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/icono_entretenimiento"/>
    <ImageButton
            android:id="@+id/btnArte"
            android:layout_width="185dp"
            android:layout_height="250dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="124dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:contentDescription="ARTE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icono_arte"/>
    <TextView
            android:id="@+id/txtCategoria"
            android:layout_width="382dp"
            android:layout_height="46dp"
            android:layout_marginTop="72dp"
            android:text="Selecciona una categoria"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="34sp"
            android:textColor="@color/rosado_logo"
            android:fontFamily="@font/sprite_graffiti" app:layout_constraintHorizontal_bias="0.517"/>
    <ImageButton
            android:id="@+id/btnDeporte"
            android:layout_width="185dp"
            android:layout_height="250dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="92dp"
            android:backgroundTint="@color/cardview_shadow_start_color"
            android:contentDescription="DEPORTE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/icono_deporte"/>

</androidx.constraintlayout.widget.ConstraintLayout>